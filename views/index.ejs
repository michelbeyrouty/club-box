<!DOCTYPE html>

<head>
    <link href="/css/styles.css" rel="stylesheet" type="text/css" media="all" />
</head>

<body>
    <div class="topnav">
        <div id="logo">Club-Box</div>
    </div>

    <div id="videosWrapper">
        <div id="mainVideo">
            <div class="videoCard">
              <video id="localVideo" class="" autoplay muted playsinline></video>
            </div> 
        </div>
        <div id='videoGallery'>
            <div class="videoCard">
              <video id="remoteVideo" class="" autoplay playsinline></video>
            </div>
            <div class="videoCard">
              <video id="remoteVideo" class="" autoplay playsinline></video>
            </div>
        </div>
    </div>

    <div id="actionBar">
        <button id="muteAudienceButton" class='actionButton' onclick="muteAudience()">Mute Audience</button>
    </div>
</body>

<!-- Import SocketIO for signalling -->
<script src="/socket.io/socket.io.js"></script>

<!-- Import WebRTC adapter for compatibility with all the browsers  -->
<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>

<!-- Import TURN config -->
<script src="js\config.js"></script>

<!-- Import script containing WebRTC related functions -->
<script src="js\main.js"></script>


<script >
    function muteAudience () {
         document.getElementById("remoteVideo").muted = true;
       }
</script>

